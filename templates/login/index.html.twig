{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="d-flex justify-content-center mb-5">
            <h1 class="col-10 col-sm-6 bg-dark text-primary text-center p-2 m-3 rounded-pill fw-bold fs-3">Se connecter</h1>
        </div>
        <div class="row justify-content-center">
            <form class="col-lg-6 col-md-8 col-sm-10 p-4 slideInUp" action="{{ path('login') }}" method="post">
                <div class="mt-2 py-1 fw-bold text-primary">
                    <label for="username">Pseudo</label>
                    <input class="form-control" type="text" id="username" placeholder="Pseudo" name="_username" value="{{ last_username }}"/>
                </div>
                <div class="mt-2 py-1 fw-bold text-primary">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" id="password" placeholder="Password" name="_password"/>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <div class="d-flex justify-content-center mt-4 mb-2 p-2">
                    <button class="btn btn-dark text-primary rounded-pill fw-bold fs-5" type="submit">login</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}