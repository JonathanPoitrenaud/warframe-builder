{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center">
            <h1 class="col-10 col-sm-6 bg-dark text-primary text-center p-2 m-3 rounded-pill fw-bold fs-3">Register</h1>
        </div>
    </div>
    <div class="col-10 mx-auto text-primary fw-bold">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
    </div>
    <div class="d-flex justify-content-center mt-4 mb-2 p-2">
        <button type="submit" class="btn btn-dark text-primary rounded-pill fw-bold fs-5">Register</button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
